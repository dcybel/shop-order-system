        <Label Content="Woonplaats:" Height="28" HorizontalAlignment="Left" Margin="12,272,0,0" Name="lblTown" VerticalAlignment="Top" />
        <Button Content="Voeg Toe" Height="23" HorizontalAlignment="Left" Margin="209,325,0,0" Name="btnAddCustomer" VerticalAlignment="Top" Width="75" Click="btnAddCustomer_Click" />
    </Grid>
</Window>
